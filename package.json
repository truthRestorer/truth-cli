{
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "ts-node scripts/dev.ts --path ../packages/web --web",
    "dev:test": "vitest",
    "dev:playground": "ts-node scripts/dev.ts --path ../playground --playground",
    "build": "ts-node scripts/build.ts web core cli",
    "build:cli": "ts-node scripts/build.ts cli core",
    "build:deploy": "ts-node scripts/build-vercel.ts --path ../packages/web --web",
    "build:playground": "ts-node scripts/build-vercel.ts --path ../playground --playground",
    "test": "ts-node scripts/test-e2e.ts && vitest run",
    "prepare": "husky install",
    "commit": "git-cz",
    "bench": "vitest bench --run",
    "docs:dev": "pnpm -F docs dev",
    "docs:build": "pnpm -F docs build",
    "docs:preview": "pnpm -F docs preview"
  },
  "license": "MIT",
  "devDependencies": {
    "@antfu/eslint-config": "^0.39.8",
    "@changesets/cli": "^2.26.2",
    "@commitlint/cli": "^18.4.1",
    "@commitlint/config-conventional": "^18.4.0",
    "@types/minimist": "^1.2.5",
    "@types/node": "^20.9.0",
    "@vitejs/plugin-vue": "^4.4.1",
    "@vitest/coverage-v8": "^0.34.6",
    "commitizen": "^4.3.0",
    "cz-git": "^1.7.1",
    "esbuild": "^0.19.5",
    "eslint": "^8.53.0",
    "husky": "^8.0.3",
    "lint-staged": "^15.1.0",
    "minimist": "^1.2.8",
    "picocolors": "^1.0.0",
    "prettier": "^3.1.0",
    "puppeteer": "^21.5.1",
    "terser": "^5.24.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2",
    "unplugin-auto-import": "^0.16.7",
    "unplugin-vue-components": "^0.25.2",
    "vite": "^4.5.0",
    "vite-plugin-compression2": "^0.11.0",
    "vite-plugin-singlefile": "^0.13.5",
    "vitest": "^0.34.6"
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-git",
      "useEmoji": true
    }
  },
  "engines": {
    "node": ">=18",
    "pnpm": ">=8"
  },
  "lint-staged": {
    "*.{js,ts,vue}": [
      "eslint"
    ]
  }
}