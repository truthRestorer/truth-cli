{
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "nodemon",
    "dev:test": "vitest",
    "build": "ts-node scripts/build.ts",
    "build:cli": "ts-node scripts/build-cli.ts",
    "build:web": "ts-node scripts/build-web.ts",
    "build:deploy": "ts-node scripts/build-deploy.ts",
    "playground": "ts-node scripts/playground.ts",
    "test": "vitest run",
    "prepare": "husky install",
    "commit": "git-cz",
    "docs:dev": "pnpm -F docs dev",
    "docs:build": "pnpm -F docs build",
    "docs:preview": "pnpm -F docs preview"
  },
  "license": "MIT",
  "devDependencies": {
    "@antfu/eslint-config": "^0.39.8",
    "@changesets/cli": "^2.26.2",
    "@commitlint/cli": "^17.6.7",
    "@commitlint/config-conventional": "^17.6.7",
    "@rollup/plugin-commonjs": "^25.0.3",
    "@rollup/plugin-node-resolve": "^15.1.0",
    "@rollup/plugin-terser": "^0.4.3",
    "@rollup/plugin-typescript": "^11.1.2",
    "@truth-cli/core": "workspace:^",
    "@truth-cli/shared": "workspace:^",
    "@types/minimist": "^1.2.2",
    "@types/node": "^20.4.7",
    "@vitejs/plugin-vue": "^4.2.3",
    "@vue/test-utils": "^2.4.1",
    "commitizen": "^4.3.0",
    "cz-git": "^1.7.0",
    "eslint": "^8.45.0",
    "fs-extra": "^11.1.1",
    "happy-dom": "^10.9.0",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.3",
    "prettier": "^3.0.1",
    "rollup": "^3.26.3",
    "ts-node": "^10.9.1",
    "typescript": "^5.1.6",
    "vite": "^4.4.5",
    "vite-plugin-singlefile": "^0.13.5",
    "vitest": "^0.34.1",
    "vue": "^3.3.4"
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-git",
      "useEmoji": true
    }
  },
  "engines": {
    "node": ">=16",
    "pnpm": ">=6"
  },
  "lint-staged": {
    "*.{js,ts,vue}": [
      "eslint"
    ]
  }
}