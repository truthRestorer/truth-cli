{
  "name": "truth-cli",
  "version": "0.5.0",
  "description": "A command-line tool for analyzing dependencies under node_moudles",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "truth-cli": "dist/index.js"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "pnpm -F web dev",
    "test": "vitest run",
    "dev:test": "vitest",
    "build": "pnpm run build:cli && pnpm run build:web",
    "build:web": "pnpm -F web build --emptyOutDir",
    "build:cli": "ts-node --esm scripts/build-cli.ts",
    "prepare": "husky install",
    "commit": "git-cz",
    "ci:publish": "pnpm publish -r --no-git-check"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/lilming123/dep_cli.git"
  },
  "keywords": [
    "node_moudles",
    "cli",
    "node"
  ],
  "author": "lilming",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/lilming123/dep_cil/issues"
  },
  "homepage": "https://github.com/lilming123/dep_cil#readme",
  "dependencies": {
    "@truth-cli/shared": "workspace:^",
    "commander": "^11.0.0",
    "chalk": "^5.3.0",
    "local-pkg": "^0.4.3"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^0.39.8",
    "@changesets/cli": "^2.26.2",
    "@commitlint/cli": "^17.6.7",
    "@commitlint/config-conventional": "^17.6.7",
    "@rollup/plugin-commonjs": "^25.0.3",
    "@rollup/plugin-json": "^6.0.0",
    "@rollup/plugin-node-resolve": "^15.1.0",
    "@rollup/plugin-terser": "^0.4.3",
    "@rollup/plugin-typescript": "^11.1.2",
    "@types/koa": "^2.13.8",
    "@types/koa-static": "^4.0.2",
    "@types/node": "^20.4.7",
    "commitizen": "^4.3.0",
    "cz-git": "^1.7.0",
    "eslint": "^8.45.0",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.3",
    "prettier": "^3.0.1",
    "rollup": "^3.26.3",
    "ts-node": "^10.9.1",
    "typescript": "^5.1.6",
    "vitest": "^0.34.1"
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-git",
      "useEmoji": true
    }
  },
  "engines": {
    "node": ">=14",
    "pnpm": ">=6"
  },
  "lint-staged": {
    "*.{js,ts,vue}": [
      "eslint"
    ]
  }
}
